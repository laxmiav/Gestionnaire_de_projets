{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h1>Tasks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.Description }}</td>
            </tr>
            <tr>
                <th>Deadline_date</th>
                <td>{{ task.DeadlineDate ? task.DeadlineDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ task.Priority }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.Status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tasks_index') }}">back to list</a>

    <a href="{{ path('app_tasks_edit', {'id': task.id}) }}">edit</a>

    {{ include('tasks/_delete_form.html.twig') }}
{% endblock %}
